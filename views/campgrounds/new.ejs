<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h1 class="text-center">Create a New Campground</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" id="name" type="text" name="name" placeholder="Enter Name" required>
                </div>
                <div class="form-group">
                    <label for="price">Campground Price</label>
                    <input class="form-control" id="name" type="number" name="price" placeholder="Enter Price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="image">Campground Image URL</label>
                    <input class="form-control" id="image" type="text" name="image" placeholder="Enter Image URL" required>
                </div>
                <div class="form-group">
                    <label for="description">Campground Description</label>
                    <textarea class="form-control" id="description" rows="7" name="description" placeholder="Enter Description" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

