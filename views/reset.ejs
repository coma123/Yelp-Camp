<% include partials/header %>

<h1 class="text-center">Password Reset</h1>
<hr class="col-sm-6 col-sm-offset-3">
<div class="row">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
        <form action="/reset/<%= token %>" method="POST">
            <legend>Reset Password</legend>
            <div class="form-group">
                <label for="password">New Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter New Password" id="password" autofocus>
            </div>
            <div class="form-group">
                <label for="confirm">Confirm Password</label>
                <input type="password" class="form-control" name="confirm" placeholder="Confirm Password" id="confirm">
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button class="btn btn-primary btn-block">Update Password</button>
                </div>
            </div>
        </form>
    </div>
</div>

