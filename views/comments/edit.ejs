<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h1 class="text-center">Edit Comment</h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text">Comment Text</label>
                    <textarea cols="30" rows="7" id="text" class="form-control" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

